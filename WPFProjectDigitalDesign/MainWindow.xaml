<Window x:Class="WPFProjectDigitalDesign.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFProjectDigitalDesign"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel x:Name="LayoutGrid">
        <UniformGrid x:Name="MyGrid" Columns="2" Height="69" VerticalAlignment="Top" HorizontalAlignment="Center" DockPanel.Dock="Top">
            <Button x:Name="button1" Height="40" Width="200" FontSize="14" Click="Button_Click">
                <Button.Content>
                    Начать
                </Button.Content>
                <Button.Background>
                    <SolidColorBrush Opacity="0.5" Color="Green"/>
                </Button.Background>
            </Button>
            <StackPanel Orientation="Vertical">
                <TextBlock HorizontalAlignment="Center">Введите размер поля</TextBlock>
                <TextBox x:Name="text_box1" Width="180" Height="40" HorizontalAlignment="Center" FontSize="22"/>
            </StackPanel>
            
            
        </UniformGrid>
       
    </DockPanel>



</Window>
